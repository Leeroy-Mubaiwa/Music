 
@model Music.Models.Track

@{
    ViewData["Title"] = "Upload Track";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Upload New Track</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Track Title</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter track title" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ArtistId" class="form-label">Artist</label>
                        <select asp-for="ArtistId" class="form-select" asp-items="ViewBag.ArtistId">
                            <option value="">-- Select Artist --</option>
                        </select>
                        <span asp-validation-for="ArtistId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AlbumId" class="form-label">Album</label>
                        <select asp-for="AlbumId" class="form-select" asp-items="ViewBag.AlbumId">
                            <option value="">-- Select Album --</option>
                        </select>
                        <span asp-validation-for="AlbumId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Length" class="form-label">Duration (mm:ss)</label>
                            <input asp-for="Length" class="form-control" placeholder="03:45" />
                            <span asp-validation-for="Length" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="UnitPrice" class="form-label">Price ($)</label>
                            <input asp-for="UnitPrice" class="form-control" placeholder="0.99" />
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Song File</label>
                        <input type="file" asp-for="AudioFile" class="form-control" accept="audio/*" />
                        <span asp-validation-for="AudioFile" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="Approved" class="form-check-input" id="Approved" />
                        <label asp-for="Approved" class="form-check-label">Approve for Publication</label>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Upload Track</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
 